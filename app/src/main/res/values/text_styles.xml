<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Text" parent="TextAppearance.AppCompat">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="Text.EditText.Label" parent="Text">
        <item name="android:textSize">@dimen/text_size_xnormal</item>
        <item name="android:fontFamily">@font/gilroy_regular</item>
    </style>

    <style name="Text.Header" parent="Text">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:fontFamily">@font/gilroy_extra_bold</item>
    </style>

    <style name="Text.Body1" parent="Text">
        <item name="android:textSize">@dimen/text_size_xnormal</item>
        <item name="android:fontFamily">@font/gilroy_regular</item>
    </style>

    <style name="Text.Body2" parent="Text">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:fontFamily">@font/gilroy_light</item>
    </style>

    <style name="Text.Button" parent="Text">
        <item name="android:textSize">@dimen/text_size_xnormal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/gilroy_regular</item>
    </style>

    <style name="Text.Title" parent="Text">
        <item name="android:textSize">@dimen/text_size_xxnormal</item>
        <item name="android:fontFamily">@font/gilroy_regular</item>
    </style>
</resources>