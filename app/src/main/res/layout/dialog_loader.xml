<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/globe_loading"
        android:layout_centerInParent="true"
        android:layout_width="@dimen/view_size_xxxlarge"
        android:layout_height="@dimen/view_size_xxxlarge"
        app:lottie_autoPlay="true"
        app:lottie_rawRes="@raw/globe"
        app:tint="@color/med_gray"
        app:lottie_loop="true" />

    <TextView
        android:layout_width="wrap_content"
        style="@style/Text.Header"
        android:layout_marginTop="@dimen/margin_padding_large"
        android:textColor="@color/med_gray"
        android:text="Just a moment"
        android:textSize="@dimen/text_size_xxnormal"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        style="@style/Text.Body1"
        android:layout_marginTop="@dimen/margin_padding_small"
        android:textColor="@color/med_gray"
        android:text="Please wait..."
        android:textSize="@dimen/text_size_xxnormal"
        android:layout_height="wrap_content" />

</androidx.appcompat.widget.LinearLayoutCompat>