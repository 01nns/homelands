<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_flag"
        android:scaleType="centerCrop"
        android:layout_margin="@dimen/margin_padding_normal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_size_header"/>


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_padding_normal"
        android:background="@drawable/bg_fragment_container_rounded_corners_top"
        android:orientation="vertical"
        android:padding="@dimen/margin_padding_normal">

        <TextView
            android:id="@+id/txt_country_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Text.Header"
            android:textColor="@color/med_gray"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/margin_padding_normal"
            android:background="@color/light_gray"/>

        <TextView
            android:id="@+id/txt_capital"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_padding_normal"
            android:textSize="@dimen/text_size_xxnormal"
            style="@style/Text.Body1" />

        <TextView
            android:id="@+id/txt_region"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_padding_normal"
            android:textSize="@dimen/text_size_xxnormal"
            style="@style/Text.Body1" />

        <TextView
            android:id="@+id/txt_sub_region"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/margin_padding_normal"
            android:textSize="@dimen/text_size_xxnormal"
            android:layout_height="wrap_content"
            style="@style/Text.Body1" />

        <TextView
            android:id="@+id/txt_area"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/margin_padding_normal"
            android:textSize="@dimen/text_size_xxnormal"
            android:layout_height="wrap_content"
            style="@style/Text.Body1" />


    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.appcompat.widget.LinearLayoutCompat>